<h1>Listing theaters</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Type</th>
    <th>Email</th>
    <th>Number</th>
    <th>Bills Total</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @theaters.each do |theater| %>
  <tr>
    <td><%= theater.name %></td>
    <td><%= theater.location %></td>
    <td><%= theater.type %></td>
    <td><%= theater.email %></td>
    <td><%= theater.number %></td>
    <td title=<%= give_details theater.bills %> ><%= theater.bills.map{|bill| bill.amount}.sum %></td>
    <td><%= link_to "add bill", new_bill_path(:theater_id => theater.id )%></td>
  </tr>
<% end %>
</table>

